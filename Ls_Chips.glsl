// Returns lower left corner of character in the font texture
vec2 char_origin(int c) {
  int nth = c - 32;
  int row = nth / 10;
  int col = nth - (row * 10);
  vec2 uv = vec2(col, row) / 10.0;
  uv.x += 0.025;
  return uv;
}

// Returns contribution at position xy of string str at position where
float char_print(int[13] str, vec2 where, float tracking, vec2 xy) {
  vec2 stringuv = clamp(xy - where, 0.0, 1.0);
  if(stringuv.y > 0.1) return 1.0;

  // Which character are we in?  Sum widths of characters left to right
  // until we overtake current position
  int thischaridx = -1;
  float prevcharswidth = 0.0;
  for(int i = 0; i < str.length(); i++) {
    float thischarwidth = char_widths[str[i]] + tracking + 0.0055;
    prevcharswidth += thischarwidth;
    if(prevcharswidth > stringuv.x) {
      thischaridx = i;
      prevcharswidth -= thischarwidth;
      break;
    }
  }
  int thischar = str[thischaridx];

  // Give up if we're off the end of the string
  if(thischaridx == -1) return 1.0;

  // Where are we in the character?
  vec2 charuv = stringuv - vec2(prevcharswidth, 0.0);

  // Where is that in the font texture?
  vec2 fontuv = char_origin(thischar) + charuv;

  // Look it up
  float sdf = texture2D(adsk_texture_grid, fontuv).r;
  float aa = smoothstep(0.5, 1.5, sdf);

  return aa;
}

void main() {
  vec2 res = vec2(adsk_result_w, adsk_result_h);
  vec2 xy = gl_FragCoord.xy / res;

  float letters = char_print(AaBb, vec2(0.0, 0.2), t.x/100.0, xy);
  letters *= char_print(elmcomplains, vec2(0.2, 0.4), t.x/100.0, xy);
  
  gl_FragColor = vec4(letters);
}
